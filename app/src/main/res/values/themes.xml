<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/all</item>
        <item name="colorPrimaryVariant">@color/all</item>
        <item name="colorOnPrimary">@color/lime</item>-
        <item name="colorSecondary">@color/all</item>
        <item name="colorSecondaryVariant">@color/all</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hw_subject_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="weekdaysText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="replacementText" parent="text">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rowNumberText" parent="text">
        <item name="android:padding">10dp</item>
    </style>

    <style name="numberText" parent="text">
        <item name="android:padding">10dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <color name="black_text">#000000</color>

    <style name="dialog_homework_set" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="sapperBtn" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">40dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="subject_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="head_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lime</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lesson_index_text" parent="head_text">
        <item name="android:layout_marginVertical">@dimen/item_subject_margin</item>
        <item name="android:layout_height">@dimen/item_subject_height</item>
        <item name="android:layout_width">@dimen/lesson_index_width</item>
    </style>

    <style name="day_of_week_text" parent="head_text">
        <item name="android:layout_height">@dimen/day_of_week_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="week_number_text" parent="head_text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/day_of_week_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>